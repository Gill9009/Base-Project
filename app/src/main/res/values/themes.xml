<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BaseProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:listDivider">@color/colorPrimary</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="Theme.BaseProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullScreenTheme" parent="Theme.BaseProject.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- _________ Toolbar _________ -->
    <style name="ToolbarTheme" parent="@style/Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/colorPrimary</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="titleTextColor">@color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <!-- _________ TextView _________ -->

    <style name="TextBodySmall" parent="TextAppearance.Material3.BodySmall" />
    <style name="TextBodySmallBold" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBodyMedium" parent="TextAppearance.Material3.BodyMedium" />
    <style name="TextBodyMediumBold" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBodyLarge" parent="TextAppearance.Material3.BodyLarge" />
    <style name="TextBodyLargeBold" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLabelSmall" parent="TextAppearance.Material3.LabelSmall" />
    <style name="TextLabelSmallBold" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLabelMedium" parent="TextAppearance.Material3.LabelMedium" />
    <style name="TextLabelMediumBold" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextLabelLarge" parent="TextAppearance.Material3.LabelLarge" />
    <style name="TextLabelLargeBold" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitleSmall" parent="TextAppearance.Material3.TitleSmall" />
    <style name="TextTitleSmallBold" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitleMedium" parent="TextAppearance.Material3.TitleMedium" />
    <style name="TextTitleMediumBold" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextTitleLarge" parent="TextAppearance.Material3.TitleLarge" />
    <style name="TextTitleLargeBold" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall" />
    <style name="TextHeadlineSmallBold" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium" />
    <style name="TextHeadlineMediumBold" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextHeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge" />
    <style name="TextHeadlineLargeBold" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDisplaySmall" parent="TextAppearance.Material3.DisplaySmall" />
    <style name="TextDisplaySmallBold" parent="TextAppearance.Material3.DisplaySmall" >
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDisplayMedium" parent="TextAppearance.Material3.DisplayMedium" />
    <style name="TextDisplayMediumBold" parent="TextAppearance.Material3.DisplayMedium" >
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextDisplayLarge" parent="TextAppearance.Material3.DisplayLarge" />
    <style name="TextDisplayLargeBold" parent="TextAppearance.Material3.DisplayLarge" >
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrawerItemTextStyle" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center|start</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <item name="android:paddingBottom">@dimen/_5sdp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:drawablePadding">@dimen/_20sdp</item>
    </style>

    <!-- _________ Dialog _________ -->
    <style name="CustomRoundedAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CustomDialog.Rounded</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CustomDialog.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

</resources>